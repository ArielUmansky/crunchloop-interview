<div class="crunchloop-container">
  <img src="/images/crunchloop.svg" alt="Crunchloop" class="crunchloop-logo" />

  <div class="crunchloop-main-title-container">
    <h1 class="crunchloop-main-title">Todo Lists</h1>
    <h3 class="crunchloop-signature">by Ariel Umansky</h1>
  </div>

  <h2 class="crunchloop-subtitle">New Todo List</h2>

  <%= form_with(url: todo_lists_path, method: :post, local: true, html: { class: 'crunchloop-new-todo' }) do |form| %>
    <%= text_field_tag :name, @todo_list&.name, placeholder: "Enter list name", class: "crunchloop-input-text" %>
    <%= submit_tag "Create" %>
  <% end %>

  <div class="crunchloop-todo-list">
    <% @todo_lists.each do |list| %>
      <div id="<%= dom_id(list) %>" class="crunchloop-todo-list-item">
        <div class="todo-list-container" style="background: linear-gradient(
            to right,
            white <%= list.progress %>%,
            rgba(255, 255, 255, 0.2) <%= list.progress %>%
          )">
          <%= link_to todo_list_path(list), class: "crunchloop-todo-list-slot-index" do %>
            <span class="crunchloop-todo-list-name"><%= list.name %></span>
            <span class="crunchloop-todo-list-progress"><%= list.progress %>%</span>
            <%= button_to todo_list_path(list),
                          method: :delete,
                          form: { data: { turbo_confirm: "Are you sure you want to delete this list?" } },
                          class: "crunchloop-delete-list-button",
                          onclick: "event.stopPropagation(); event.preventDefault(); this.closest('form').submit();",
                          title: "Delete list" do %>
              <i class="fa-solid fa-circle-xmark fa-x"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
